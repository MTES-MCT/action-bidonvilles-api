{
  "name": "action-bidonvilles-api",
  "version": "0.0.1",
  "description": "API d'Action Bidonvilles",
  "main": "server/index.js",
  "repository": "git+https://github.com/MTES-MCT/action-bidonvilles.git",
  "author": {
    "name": "Anis Safine Laget",
    "email": "anis@users.noreply.github.com"
  },
  "license": "AGPL-3.0-or-later",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "forever": "^0.15.3",
    "jsonwebtoken": "^8.4.0",
    "module-alias": "^2.2.0",
    "neat-csv": "^4.0.0",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sequelize-temporal": "^1.0.6",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "chai-subset": "^1.6.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.9",
    "proxyquire": "^2.1.0",
    "sequelize-test-helpers": "^1.0.10",
    "sinon": "^7.2.7",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "server/**/*.js": [
      "eslint"
    ]
  },
  "scripts": {
    "db:create": "sequelize db:migrate && sequelize db:seed:all",
    "db:reset": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "start": "forever start server/index.js",
    "dev": "nodemon server/index.js",
    "test": "mocha --recursive --require ./test/bootstrap/index.js --bail",
    "test:unit": "yarn test --invert --grep '.*server/models.*'",
    "test:integration": "yarn test --grep '.*server/models.*'"
  },
  "_moduleAliases": {
    "#server": "./server",
    "#db": "./db",
    "#test": "./test",
    "#fixtures": "./test/fixtures"
  }
}
